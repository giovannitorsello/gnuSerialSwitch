{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/gcc",
      "args": ["-fdiagnostics-color=always", "-g", "${fileDirname}/*.c", "${fileDirname}/*.h", "-L/usr/lib64/", "-o", "${fileDirname}/serialSwitch"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Debugger generated activity"
    }
  ],
  "version": "2.0.0"
}
